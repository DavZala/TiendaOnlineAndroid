<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <!-- Toolbar superior-->

        <!-- Barra de b칰squeda -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/verdemusgo">

            <!-- Secci칩n de bienvenida -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola 游녦"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:maxHeight="47dp"
                    android:layout_marginStart="8dp"
                    android:text="Usuario Defecto"
                    android:textColor="@color/arena"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/carrito"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Carrito"
                    android:src="@drawable/carrito" />

                <ImageView
                    android:id="@+id/ubicacion"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="Ubicacion"
                    android:src="@drawable/mapa" />

                <ImageView
                    android:id="@+id/perfil"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="Perfil"
                    android:src="@drawable/perfil" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:hint="Buscar"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Secci칩n de Trending Campsites -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="217dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:text="Categorias en Tendencia"
                android:textColor="@color/verdemusgo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Ver m치s"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Texto de Ver m치s en Trending Campsites -->

        <!-- Separador -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Campamento 1 -->

            <!-- Campamento 2 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ropaycalzado"
                    android:layout_width="162dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ropaycalzado" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ropa y Calzado"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envio $ 5,00 USD"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="162dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mochila" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mochilas de Monta침a"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envio $ 8,00 USD"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <!-- Secci칩n de Popular -->
            <TextView
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:text="Populares"
                android:textColor="@color/verdemusgo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Ver m치s"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp" />

            <!-- Texto de Ver m치s en Popular -->

        </LinearLayout>

        <!-- activity_main.xml -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/anadir"
                android:textColor="@color/white"
                android:backgroundTint="@color/verdemusgo"
                android:text="Agregar Producto" />

            <ListView
                android:id="@+id/product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>




