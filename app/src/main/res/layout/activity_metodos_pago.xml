<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/verdemusgo"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Botón de volver -->
        <ImageButton
            android:id="@+id/volver"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/volver"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Volver" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Métodos de Pago"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Lista de métodos de pago -->
    <ListView
        android:id="@+id/lista_metodos_pago"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:divider="@android:color/black"
        android:dividerHeight="1dp" />

    <!-- Botón para añadir nuevo método de pago -->
    <Button
        android:id="@+id/btn_add_metodo_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/verdemusgo"
        android:text="Añadir Método de Pago"
        android:layout_marginTop="16dp" />
</LinearLayout>
